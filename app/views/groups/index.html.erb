<p id="notice"><%= notice %></p>

<h1>Listing Groups</h1>


<div class="row-fluid">

		<%= link_to 'New Group', new_group_path %></br>
		</br>

		<table class="table table-bordered table-condensed table-striped">
			<thead>
				<tr>
					<th>Group Name</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% if @groups.present? %>
					<% @groups.each do |group| %>
						<tr>
							<td><%= link_to group.group_name, group %></td>
							<td><%= link_to "Edit", [:edit, group] %></td>
							<td><%= link_to "Destroy", group_path(group), method: :delete, data: {confirm: 'Are you sure?' } %></td>
						</tr>
					<% end %>
				<% end %>
			</tbody>
		</table>
	<div class="span8">
	</div>
</div>