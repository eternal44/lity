<%= form_for(resource, :as => resource_name, :url => create_session_path) do |f| %>
  <div>
    <%= f.label :username, 'Username' %>
    <%= f.text_field :username, :placeholder => 'Username', :autofocus => true %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password, :placeholder => "Password" %>
  </div>
  <div>
    <%= f.submit "Sign in" %>
  </div>
<% end %>
