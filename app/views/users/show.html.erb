<p id="notice"><%= notice %></p>
<h1><%= @user.first_name %>'s Profile </h1>

<strong>Name:</strong>
<%= @user.first_name %>
<%= @user.last_name %>
<br>

<strong>Email:</strong>
<%= @user.email %><br>


<h3>Friends List</h3>
	<% @user.friends.each do |u| %>
		<% u.friendships.each do |friendship| %>
			<%= u.first_name %> <%= u.last_name %>
			<%= link_to "Show", user_path(u) %>
			<%= link_to " | Unfriend", friend_path(friendship.id), method: :delete, data: { confirm: 'Are you sure?' } %></br>
		<% end %>
	<% end %>



<h3>Friend Requests</h3>
	
	<strong>Friends Requested</strong><br>
	<% @outgoing.each do |o| %>
		<%= o.friend.first_name %>
		<%= link_to "Cancel", friend_request_path(o.id), method: :delete, data: { confirm: 'Are you sure?' } %></br>

	<% end %>

	<strong>Accept Friend Request?</strong><br>
	<% @incoming.each do |i| %>
		<%= i.user.first_name %>
		<%= link_to "Confirm", friend_request_path(i.id), method: :put %>

		<%= link_to "Destroy", friend_request_path(i.id), method: :delete, data: { confirm: 'Are you sure?' } %></br>
	<% end %>

<h3>Group dump</h3>

	<table class="table table-bordered table-condensed table-striped">
		<thead>
			<tr>
				<th>Group Name</th>
				<th>Role</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
				<% @user.groups.each do |g| %>
					<% g.memberships.where(user_id: @user.id).each do |m| %>
						<tr>
							<td><%= g.group_name %></td>
							<td><%= m.group_role %></td>
							<td><%= link_to "See Group", group_path(g) %></td>
						</tr>
					<% end %>
				<% end %>

		</tbody>
	</table>



<h3>Archives</h3>

	<table class="table table-bordered table-condensed table-striped">
		<thead>
			<tr>
				<th>Lift Name</th>
				<th>Lift Weight</th>
				<th>Video Validation</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @user.archives.each do |a| %>
					<tr>
						<td><%= a.lift_name %></td>
						<td><%= a.lift_weight %></td>
						<td><%= a.video_link %></td>
						<td><%= link_to "See Archive", group_archive_path(a.group_id, a) %></td>
					</tr>
			<% end %>
		</tbody>
	</table>



<%= link_to 'Back', :back %>
